//This file is not used anywhere
//Just wanted to show java-application-logs index mapping
//Used lower mentioned json as body for index template update
{
  "index_patterns": [
    "java-application-*"
  ],
  "settings": {
    "index": {
      "refresh_interval": "5s"
    }
  },
  "mappings": {
    "properties": {
      "correlationId": {
        "type": "keyword"
      },
      "appArchiveName": {
        "type": "keyword"
      },
      "logDateStamp": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss.SSS"
      },
      "thread": {
        "type": "keyword"
      },
      "level": {
        "type": "keyword"
      },
      "loggerName": {
        "type": "keyword"
      },
      "endOfBatch": {
        "type" : "boolean"
      },
      "loggerFqcn": {
        "type" : "keyword"
      },
      "threadId": {
        "type": "long"
      },
      "threadPriority" : {
        "type" : "long"
      },
      "source": {
        "type" : "text"
      },
      "message": {
        "type" : "text"
      }
    }
  }
}
