<?xml version="1.0"?>
<configuration>
    <timestamp key="timestamp" datePattern="dd-MM-yyyy-HH-mm"/>
    <appender name="APPLICATION-LOGS-FILE" class="ch.qos.logback.core.FileAppender">
        <file>aplication_logs_${timestamp}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
                <timestampFormatTimezoneId>Etc/UTC</timestampFormatTimezoneId>
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>true</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>
    <appender name="REQUESTS-FILE" class="ch.qos.logback.core.FileAppender">
        <file>requests_logs_${timestamp}.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
                <timestampFormatTimezoneId>Etc/UTC</timestampFormatTimezoneId>
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>true</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>
    <!-- additivity=false ensures analytics data only goes to the analytics log -->
    <logger name="requests" level="INFO" additivity="false">
        <appender-ref ref="REQUESTS-FILE"/>
    </logger>
    <root>
        <appender-ref ref="APPLICATION-LOGS-FILE"/>
    </root>
</configuration>